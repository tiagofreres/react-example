{
  "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "valid-jsdoc": 2,

    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "jsx-scope": 2,
    "no-var": 0,
    "vars-on-top": 0,
    "block-scoped-var": 0,
    "padded-blocks": 0
  },
  "plugins": [
    "react"
  ]
}
